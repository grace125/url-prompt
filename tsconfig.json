{
    "compilerOptions": {
        "target": "es6",
        "moduleResolution": "bundler",
        "module": "ES6",
        "esModuleInterop": true,
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "dist/js",
        "noEmitOnError": true,
        "jsx": "react",
        "typeRoots": [ "node_modules/@types" ],
        "allowJs": false,

        "noUncheckedIndexedAccess": true,
        // "noUncheckedSideEffectImports": true,
        "noImplicitOverride": true,
        "strict": true,
    }
}
